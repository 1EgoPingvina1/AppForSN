<Page x:Class="AppForSN.Views.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppForSN.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="24" Margin="0 0 0 20" HorizontalAlignment="Center"/>

            <TextBlock Text="Логин" Margin="0 5"/>
            <TextBox x:Name="LoginTextBox" Height="25"/>

            <TextBlock Text="Пароль" Margin="0 5"/>
            <PasswordBox x:Name="PasswordBox" Height="25"/>

            <Button Content="Войти" Margin="0 20" Height="30" Click="LoginButton_Click"/>

            <TextBlock HorizontalAlignment="Center" Margin="0 10">
                <Hyperlink Click="RegisterHyperlink_Click">Регистрация</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
