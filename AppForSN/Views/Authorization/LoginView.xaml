<Window x:Class="AppForSNForUsers.Views.Authorization.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppForSNForUsers.Views.Authorization"
        mc:Ignorable="d" Background="{StaticResource SteamDarkBrush}"
        Title="LoginView" Height="450" Width="500"
        >
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <!--Если надо лого-->
            <!--<Image Source="/Assets/Images/logo.png" Height="100" Margin="0,0,0,20"/>-->

            <TextBlock Text="Вход в систему" Style="{StaticResource HeaderTextStyle}" 
                       HorizontalAlignment="Center"  Margin="0,0,0,20"/>

            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SteamTextBoxStyle}" 
                     Tag="Логин" Margin="0,0,0,15"/>

            <PasswordBox x:Name="PasswordBox" Style="{DynamicResource SteamPasswordBoxStyle}" 
                        Tag="Пароль" Margin="0,0,0,20"/>

            <Button Style="{StaticResource SteamPrimaryButton}"
                    Command="{Binding NavigateCommand}" CommandParameter="Home"
                    Content="Войти" Click="LoginButton_Click" Height="37"/>
            
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>

            <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center">
                <Hyperlink Command="{Binding NavigateToRegistrationCommand}">
                    Нет аккаунта? Зарегистрируйтесь
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
