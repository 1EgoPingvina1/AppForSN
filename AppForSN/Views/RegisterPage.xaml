<Page x:Class="AppForSN.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppForSN.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Регистрация" FontSize="24" Margin="0 0 0 20" HorizontalAlignment="Center"/>

            <TextBlock Text="Логин" Margin="0 5"/>
            <TextBox x:Name="LoginTextBox" Height="25"/>

            <TextBlock Text="Пароль" Margin="0 5"/>
            <PasswordBox x:Name="PasswordBox" Height="25"/>

            <TextBlock Text="Подтверждение пароля" Margin="0 5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="25"/>

            <Button Content="Зарегистрироваться" Margin="0 20" Height="30" Click="RegisterButton_Click"/>

            <TextBlock HorizontalAlignment="Center" Margin="0 10">
                <Hyperlink Click="AuthHyperlink_Click">Уже есть аккаунт? Войти</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
