<UserControl x:Class="AppForSNForUsers.Views.Shared.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppForSNForUsers.Views.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Border x:Name="NotificationBorder" 
            CornerRadius="5" 
            Padding="10" 
            Margin="5"
            Background="{DynamicResource NotificationBackground}"
            BorderBrush="{DynamicResource NotificationBorder}"
            BorderThickness="1">
        <StackPanel>
            <TextBlock x:Name="MessageText" 
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource NotificationForeground}"/>
            <ProgressBar x:Name="TimeoutProgress" 
                         Height="3" 
                         Margin="0,5,0,0"
                         Foreground="{DynamicResource NotificationProgress}"
                         IsIndeterminate="False"/>
        </StackPanel>
    </Border>
</UserControl>
